{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"rootDir": "./src/",
		"outDir": "./dist/",
		"strict": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [],
		"sourceMap": false,
		"baseUrl": "./",
		"incremental": true,
		"noEmitOnError": false
	},
	"files": [
		"src/index.ts"
	],
	"include": [
		"src/**/*.ts",
		"discord.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"node_modules/discord.js/typings/index.d.ts"
	],
}